{
    "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": ["**/*", "!**/*.min.js", "!**/dist/*"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noUnknownAtRules": "off",
                "noArrayIndexKey": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off",
                "noStaticElementInteractions": "off",
                "useKeyWithClickEvents": "off",

                "useValidAnchor": "off"
            },
            "performance": {
                "noImgElement": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "css": {
        "formatter": {
            "enabled": true,
            "lineWidth": 120
        },
        "linter": {
            "enabled": true
        },
        "parser": {
            "tailwindDirectives": true
        }
    }
}
